(function(){$("body").on("click",function(a){"1"!=$(a.target).attr("data-except")&&(clearFloat(),$(".sc").removeClass("on").fadeOut())});$("body").on("click","a.sc-a",function(){var a=$(this),b=a.parent();clearFloat();b.hasClass("on")||($(".sc").removeClass("on").hide(),b.addClass("on").show());var b=a.closest("li"),c=$("#share_box");c.attr("data-url",b.find("h3 a").attr("data-share")||b.find("h3 a").attr("href")||window.location.href);c.attr("data-title",trim(cutGreen(unescapeForHtml(b.find("h3 a").html())))||"");c.attr("data-summary",trim(cutGreen(unescapeForHtml(b.find(".txt-info").html())))||"");c.attr("data-imgLink",b.find(".img-box img").attr("src")||b.find(".img-d img:first").attr("src")||"");showFloat(c,a)});$("body").on("click",".fxico-box a",function(){bindShareClick($(this),$("#share_box"))});$("body").on("click","#share_box a.close",function(){$(this).closest(".float").fadeOut();$(".sc").removeClass("on").fadeOut()});$("body").on("click","#erweima_box a.close",function(){$(this).closest(".float").fadeOut()});$("body").on("click","div.back-top",function(){$("html,body").animate({scrollTop:0},500)});var e=$("form").eq(0),f=$("#scroll-header"),g=$(".header-box").height();$(".header-box").height(g);var h=0;$(window).scroll(function(){var a=$(this).scrollTop();500<a?$(".back-top").fadeIn():$(".back-top").fadeOut();window.isIpad||(h=$(".headsearch").height()||0,a>=g&&(f.removeClass("header").addClass("headsearch"),e.addClass("hsform"),$("[name=scroll-nav]").hide()),a<h&&(f.removeClass("headsearch").addClass("header"),e.removeClass("hsform"),$("[name=scroll-nav]").show()))});var d=0,d="article"==window.pageType||"account"==window.pageType?$(window).height()-$(".header-box").outerHeight(!0)-$(".bottom-form").outerHeight(!0)-$(".footer-box").outerHeight(!0):$(window).height()-$(".searchnav2").outerHeight(!0)-$(".header-box").outerHeight(!0)-$("#ft").outerHeight(!0);$(".wrapper").height()<d&&$(".wrapper").css("min-height",d);isIE6()||isLogin()||$(".news-box p.look-more").fadeIn()})();